# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
#GET     /                           controllers.HomeController.index()
# ========================================
# NotiLytics Routes
# ========================================
# Main Page
GET     /                   controllers.SearchController.index(request: Request)

# API Endpoints
GET     /search             controllers.SearchController.search(request: Request)
GET     /search/stream      controllers.SearchController.streamSearch(request: Request)
GET     /ws/stream          controllers.SearchController.streamSearchWs
GET     /sources            controllers.SearchController.sources(request: Request)
GET     /api/readability    controllers.SearchController.readabilityJson(request: Request)
GET     /api/wordstats      controllers.SearchController.wordStats(request: Request)
GET     /api/session-history controllers.SearchController.sessionHistory(request: Request)

# ========================================
# Navbar Pages
# ========================================
# Other pages (if you keep them)
GET   /source        controllers.SearchController.source(request: Request)
GET   /wordstats     controllers.SearchController.wordstats

# Static assets
GET   /assets/*file  controllers.Assets.versioned(path="/public", file: Asset)
